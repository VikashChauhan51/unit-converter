<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitConverter.Views.LengthConverterPage">
    <ContentPage.Content>
        <StackLayout Margin="0" Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label Text="From" FontSize="Medium" />
            <Picker x:Name="FromUnitPicker" Title="Source Unit Type" ItemDisplayBinding="{Binding Text}" />
            <Entry x:Name="FromEntry" Placeholder="Unit value" Keyboard="Numeric" MaxLength="50" />
            <Label Text="To" FontSize="Medium" />
            <Picker x:Name="ToUnitPicker" Title="Target Unit Type"  ItemDisplayBinding="{Binding Text}"/>
            <Entry x:Name="ToEntry" Placeholder="Converted value" IsEnabled="False" />
            <Button Text="Convert" BackgroundColor="LightCyan"  Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>